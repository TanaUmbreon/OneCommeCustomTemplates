{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true,
    "**/package-lock.json": true
  },

  "editor.detectIndentation": true, // #editor.tabSize#と#editor.insertSpaces#の設定を有効化する
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Prettierでコード整形を行う
  "editor.formatOnSave": false, // ESLintのFix機能およびPrettierのコード整形を利用するので、上書き保存時のVSCodeのコード整形を無効化
  "eslint.format.enable": false, // Prettierでコード整形を行うので、ESLintのコード整形を無効化
  "eslint.packageManager": "npm",

  "[html]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
  },
  "[css]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
  },
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true // 上書き保存時にESLintのFix機能を実行する
    },
  },
  "[json]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
  },
  "[jsonc]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
  },
}
