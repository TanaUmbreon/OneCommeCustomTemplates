{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true,
    "**/package-lock.json": true
  },

  "eslint.enable": true,
  "eslint.format.enable": false, // Prettierでコード整形を行うので、ESLintのコード整形を無効化
  "eslint.packageManager": "npm",

  "[html]": {
    "editor.detectIndentation": true, // #editor.tabSize#と#editor.insertSpaces#の設定を有効化する
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode", // Prettierでコード整形を行う
    "editor.formatOnSave": false, // 上書き保存時のコード整形を無効化
  },
  "[css]": {
    "editor.detectIndentation": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false,
  },
  "[javascript]": {
    "editor.detectIndentation": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true // 上書き保存時にESLintのFix機能を実行する
    },
  },
  "[typescript]": {
    "editor.detectIndentation": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[json]": {
    "editor.detectIndentation": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false,
  },
  "[jsonc]": {
    "editor.detectIndentation": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false,
  },
  "[powershell]": {
    "editor.detectIndentation": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
  }
}
